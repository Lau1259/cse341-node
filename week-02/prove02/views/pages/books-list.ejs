<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Express Books</title>
  <link rel="stylesheet" href="css/main.css">
</head>

<body>
  <header>
    <h1>Express Books</h1>
  </header>
  <main>
    <div class="books-container">
      <% bookList.forEach(book => { %>
      <div class="book">
        <h2 class="book-title"><%= book.title %></h2>
        <div class="book-img">
          <img src="https://images.unsplash.com/photo-1547413749-3e0c1ba70695?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=334&q=80" alt="Book placeholder">
        </div>
        <div class="book-info">
          <p class="book-author"><%= book.author %></p>
          <p class="book-summary"><%= book.summary %></p>
          <p class="book-rating"><%= book.rating %></p>
        </div>
      </div>
      <% }); %>
    </div>
    <%- include ('../includes/addBtn.ejs') %>
</body>

</html>